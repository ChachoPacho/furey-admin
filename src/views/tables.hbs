<!-- Begin Page Content -->
<div class="container-fluid">
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary w-100">Tabla de <span class="text-capitalize">{{title}}</span></h6>
            <div class="d-flex flex-wrap justify-content-end">
                <div type="button" class="btn btn-success" data-toggle="modal" data-target="#tableModal">
                    Entrada
                </div>
                <div type="button" class="btn btn-info" data-toggle="modal" data-target="#appendModal">
                    Columnas
                </div>
                <div type="button" class="btn btn-primary" data-toggle="modal" data-target="#createModal">
                    Funciones
                </div>
                <div type="button" class="btn btn-warning btnBlock" data-toggle="modal" data-target="#modifyModal" onclick="modifyElements()">
                    Modificar
                </div>
                <div type="button" class="btn btn-danger btnBlock" onclick="deleteElements()">
                    Eliminar
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" tableid="{{title}}" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                        </tr>
                    </tfoot>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- /.container-fluid -->


<!-- Modal -->
<div class="modal fade" id="tableModal" tabindex="-1" aria-labelledby="tableModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="tableModalLabel">Crear Entrada</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/tables/{{title}}" method="PUT" id="tableForm" class="fureyForm">
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-success" onclick="$('#tableForm').submit()">Crear</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="createModal" tabindex="-1" aria-labelledby="createModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div>
                <button type="button" class="close mx-3 mt-1" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form class="row fureyForm" id="createForm" method="PUT" action="/tables/{{title}}">
                <div class="col-12">
                    <div class="modal-header pt-0">
                        <h5 class="modal-title">FUNCIONES</h5>
                    </div>
                    <div class="modal-body mx-4">
                        <input type="hidden" name="target" value="fun">
                        <div class="form-group row justify-content-center">
                            <div class="align-self-center text-right text-gray-900 text-lg col-12 col-md-5">
                                Aplicar sobre la columna:
                            </div>
                            <select class="custom-select custom-select-md text-capitalize col-12 col-md-7" name="col">
                            </select>
                        </div>
                        <div class="form-group row justify-content-center">
                            <div class="align-self-center text-right text-gray-900 text-lg col-12 col-md-5">
                                Operación:
                            </div>
                            <select class="custom-select custom-select-md text-capitalize col-12 col-md-7" name="operation" style="width: 200px;">
                                <option value="sum">Suma +</option>
                                <option value="min">Resta -</option>
                                <option value="up">Suba +%</option>
                                <option value="down">Baja -%</option>
                                <option value="percent">Porcentaje %</option> 
                            </select>
                        </div>
                        <div class="row justify-content-center">
                            <div class="align-self-center text-right text-gray-900 text-lg col-12 col-md-5">
                                Cantidad:
                            </div>
                            <div class="m-0 p-0 col-12 col-md-7">
                                <input type="text" name="cantidad" class="form-control" placeholder="75.7">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-md-6">
                    <div class="modal-header pt-0">
                        <h5 class="modal-title">PERMANENTE</h5>
                    </div>
                    <div class="modal-body">
                                                <div class="form-group row justify-content-center">
                            <div class="align-self-center text-right text-gray-900 text-lg col-12 col-md-5">
                                Aplicar sobre la columna:
                            </div>
                            <select class="custom-select custom-select-md text-capitalize col-12 col-md-7" name="col">
                            </select>
                        </div>
                        <div class="form-group row justify-content-center">
                            <div class="align-self-center text-right text-gray-900 text-lg col-12 col-md-5">
                                Operación:
                            </div>
                            <select class="custom-select custom-select-md text-capitalize col-12 col-md-7" name="operation" style="width: 200px;">
                                <option value="sum">Suma +</option>
                                <option value="min">Resta -</option>
                                <option value="up">Suba +%</option>
                                <option value="down">Baja -%</option>
                                <option value="percent">Porcentaje %</option> 
                            </select>
                        </div>
                        <div class="row justify-content-center">
                            <div class="align-self-center text-right text-gray-900 text-lg col-12 col-md-5">
                                Cantidad:
                            </div>
                            <div class="m-0 p-0 col-12 col-md-7">
                                <input type="text" name="cantidad" class="form-control" placeholder="75.7">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-md-6">
                    <div class="modal-header pt-0">
                        <h5 class="modal-title">VISIBLES</h5>
                    </div>
                    <div class="modal-body">
                    </div>
                </div>
            </form>
            <div class="modal-footer contApply">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-success" id="createFormBTN" onclick="$('#createForm').submit()">Aplicar</button>
            </div>
            <div class="modal-footer bg-gradient-danger w-100 h-100 text-lg text-gray-100 justify-content-center contDeny">
                Deberías de haber seleccionado al menos un elemento de la tabla.
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="appendModal" tabindex="-1" aria-labelledby="appendModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div>
                <button type="button" class="close mx-3 mt-1" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="row">
                <div class="col-12 col-md-7">
                    <div class="modal-header pt-0">
                        <h5 class="modal-title" id="appendModalLabel">Creación</h5>
                    </div>
                    <div class="modal-body">
                        <form action="/admin/object" method="PUT" id="appendForm" class="fureyForm">
                            <input type="hidden" name="object" value="{{title}}">
                            <input type="hidden" name="objtype" value="col">
                            <input type="hidden" name="tableid" value="{{title}}">
                            <div class="form-group">
                                <label for="colNameInput" class="text-capitalize">Nombre de la Columna</label>
                                <input type="text" name="name" class="form-control" id="colNameInput">
                            </div>
                            <div class="form-group">
                                <label for="selectAppendForm" class="text-capitalize">Insertar a la derecha
                                    de:</label>
                                <select class="custom-select custom-select-md text-capitalize" name="afterof"
                                    id="selectAppendForm">
                                </select>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-success" onclick="$('#appendForm').submit()">Crear</button>
                    </div>
                </div>
                <div class="col-12 col-md-5">
                    <div class="modal-header pt-0">
                        <h5 class="modal-title">Eliminación</h5>
                    </div>
                    <div class="modal-body">
                        <form action="/admin/object/{{title}}" method="DELETE" id="deleteForm" class="fureyForm">
                            <input type="hidden" name="object" value="{{title}}">
                            <input type="hidden" name="tableid" value="{{title}}">
                            <div class="form-check ms-4">
                                <input type="checkbox" class="form-check-input" name="full" value="full"
                                    id="deleteCheckTable">
                                <label class="form-check-label" for="deleteCheckTable"><strong><code>TABLA</code></strong></label>
                            </div>
                            <div class="form-check ms-4">
                                <input type="checkbox" class="form-check-input" id="deleteCheckItemFull">
                                <label class="form-check-label" for="deleteCheckItemFull"><strong>TODO</strong></label>
                            </div>
                            <div class="ms-4" id="deleteCheckBoxCol"></div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" onclick="$('#deleteForm').submit()">ELIMINAR</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="modifyModal" tabindex="-1" aria-labelledby="modifyModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" id="modifyContentALL">
            <div class="modal-header">
                <h5 class="modal-title" id="modifyModalLabel">Modificar Todas las Entrada</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <small style="font-weight: bold;font-style: italic;color: #e83e8c;">
                    <p>Los espacios no rellenados, no serán modificados.</p>
                </small>
                <form action="/tables/{{title}}" method="PUT" id="modifyCheckedForm" class="fureyForm">
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-warning" onclick="$('#modifyCheckedForm').submit()">Modificar Todo</button>
            </div>
        </div>
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Modificar Entrada</h5>
                <button type="button" class="close" id="modifyClose" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="modifyFormsContent"></div>
        </div>
    </div>
</div>

